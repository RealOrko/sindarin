// Test Process.run with command arguments
// Cross-platform using Python

fn main(): int =>
    var p1: Process = Process.run("python", {"-c", "import sys; print(' '.join(sys.argv[1:]))", "hello", "world"})
    print($"echo args: {p1.stdout.trim()}\n")

    var p2: Process = Process.run("python", {"-c", "import sys; print(sys.argv[1])", "single"})
    print($"echo single: {p2.stdout.trim()}\n")

    var p3: Process = Process.run("python", {"-c", "print(5 + 3)"})
    print($"expr result: {p3.stdout.trim()}\n")

    var p4: Process = Process.run("python", {"-c", "print('arg1-arg2')"})
    print($"printf result: {p4.stdout.trim()}\n")

    return 0
