// Test Python command execution (cross-platform shell replacement)

fn main(): int =>
    var p1: Process = Process.run("python", {"-c", "print('hello')"})
    print($"basic: {p1.stdout.trim()}\n")

    var p2: Process = Process.run("python", {"-c", "print('hello'.replace('h', 'H'))"})
    print($"pipe: {p2.stdout.trim()}\n")

    var p3: Process = Process.run("python", {"-c", "X='test'; print(X)"})
    print($"variable: {p3.stdout.trim()}\n")

    var p4: Process = Process.run("python", {"-c", "def inner(): return 'inner'\nprint(inner())"})
    print($"subst: {p4.stdout.trim()}\n")

    var p5: Process = Process.run("python", {"-c", "print(5 + 3)"})
    print($"arithmetic: {p5.stdout.trim()}\n")

    var p6: Process = Process.run("python", {"-c", "print('one'); print('two')"})
    var multi: str = p6.stdout.replace("\r", "").trim()
    print($"multi: {multi}\n")

    return 0
