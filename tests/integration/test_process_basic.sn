// Test basic Process.run functionality
// Cross-platform using Python

fn main(): int =>
    var p1: Process = Process.run("python", {"-c", "pass"})
    print($"pwd exit code: {p1.exitCode}\n")

    var p2: Process = Process.run("python", {"-c", "import sys; sys.exit(1)"})
    print($"false exit code: {p2.exitCode}\n")

    var p3: Process = Process.run("nonexistent_command_xyz123")
    print($"command not found exit code: {p3.exitCode}\n")

    var p4: Process = Process.run("python", {"-c", "print('hello world')"})
    print($"echo output: {p4.stdout.trim()}\n")

    var p5: Process = Process.run("python", {"-c", "print('arg1 arg2')"})
    print($"echo with args: {p5.stdout.trim()}\n")

    return 0
