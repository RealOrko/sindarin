// Test: TCP connect and basic operations
// Uses Python as a simple server to test TcpStream.connect

fn main(): void =>
    // Clean up temp file if it exists
    var preclean: Process = Process.run("rm", {"-f", "/tmp/tcp_connect_ready"})

    // Start a Python server that sends data and closes
    var server: Process = &Process.run("python3", {"-c", "import socket;s=socket.socket();s.setsockopt(socket.SOL_SOCKET,socket.SO_REUSEADDR,1);s.bind(('127.0.0.1',0));s.listen(1);p=s.getsockname()[1];open('/tmp/tcp_connect_ready','w').write(str(p));c,a=s.accept();c.send(b'HELLO FROM SERVER');c.close();s.close()"})

    // Wait for server to be ready (poll for file)
    var attempts: int = 0
    while attempts < 100 =>
        var check: Process = Process.run("test", {"-f", "/tmp/tcp_connect_ready"})
        if check.exitCode == 0 =>
            attempts = 200
        else =>
            var wait: Process = Process.run("sleep", {"0.05"})
            attempts = attempts + 1

    if attempts < 200 =>
        print("Timeout waiting for server\n")
        return

    // Read the port number from the temp file
    var portReader: Process = Process.run("cat", {"/tmp/tcp_connect_ready"})
    var port: str = portReader.stdout.trim()

    // Connect to the Python server
    var client: TcpStream = TcpStream.connect($"127.0.0.1:{port}")
    print("Connected to server\n")

    // Check remote address contains expected IP
    var remote: str = client.remoteAddress
    if remote.contains("127.0.0.1") =>
        print("Remote address correct\n")
    else =>
        print($"Remote address unexpected: {remote}\n")

    // Check remote address contains port
    if remote.contains(port) =>
        print("Remote port correct\n")
    else =>
        print($"Remote port unexpected: {remote}\n")

    // Read data using read() method
    var data: byte[] = client.read(1024)
    var msg: str = data.toString()
    print($"Received: {msg}\n")

    if msg == "HELLO FROM SERVER" =>
        print("Message matches\n")
    else =>
        print("Message mismatch\n")

    client.close()
    print("Connection closed\n")

    // Wait for Python server to finish
    server!

    // Clean up temp file
    var cleanup: Process = Process.run("rm", {"-f", "/tmp/tcp_connect_ready"})

    print("Test complete\n")
