// Test: TCP write operations
// Uses Python as a server to receive and verify data

fn main(): void =>
    // Clean up temp file if it exists
    var preclean: Process = Process.run("rm", {"-f", "/tmp/tcp_write_ready"})

    // Start a Python server that receives data and prints what it got
    var server: Process = &Process.run("python3", {"-c", "import socket;s=socket.socket();s.setsockopt(socket.SOL_SOCKET,socket.SO_REUSEADDR,1);s.bind(('127.0.0.1',0));s.listen(1);p=s.getsockname()[1];open('/tmp/tcp_write_ready','w').write(str(p));c,a=s.accept();d=c.recv(1024);print(d.decode(),end='');c.close();s.close()"})

    // Wait for server to be ready
    var attempts: int = 0
    while attempts < 100 =>
        var check: Process = Process.run("test", {"-f", "/tmp/tcp_write_ready"})
        if check.exitCode == 0 =>
            attempts = 200
        else =>
            var wait: Process = Process.run("sleep", {"0.05"})
            attempts = attempts + 1

    if attempts < 200 =>
        print("Timeout waiting for server\n")
        return

    // Read the port number from the temp file
    var portReader: Process = Process.run("cat", {"/tmp/tcp_write_ready"})
    var port: str = portReader.stdout.trim()

    // Connect to the Python server
    var client: TcpStream = TcpStream.connect($"127.0.0.1:{port}")
    print("Connected\n")

    // Test write with byte array
    var testData: byte[] = "TEST DATA".toBytes()
    client.write(testData)
    print("Wrote bytes\n")

    client.close()
    print("Closed\n")

    // Wait for server and check what it received
    server!
    var received: str = server.stdout
    print($"Server received: {received}\n")

    if received == "TEST DATA" =>
        print("Write test passed\n")
    else =>
        print("Write test failed\n")

    // Clean up
    var cleanup: Process = Process.run("rm", {"-f", "/tmp/tcp_write_ready"})
    print("Test complete\n")
