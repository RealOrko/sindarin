// Test: Parallel HTTP-like requests
// Demonstrates making multiple HTTP-style requests concurrently
// Uses wrapper functions that return string responses
// Cross-platform: works on Windows and Linux

fn httpGet(addr: str, path: str): str =>
    var conn: TcpStream = TcpStream.connect(addr)
    conn.writeLine($"GET {path} HTTP/1.0")
    conn.writeLine("Host: localhost")
    conn.writeLine("")
    var response: byte[] = conn.read(4096)
    conn.close()
    return response.toString()

fn main(): void =>
    print("Testing parallel HTTP-like requests\n")

    // Get cross-platform temp directory and normalize path
    var tempDir: str = Environment.get("TEMP", Environment.get("TMPDIR", "/tmp")).replace("\\", "/")
    var portFilePath: str = $"{tempDir}/tcp_http_port"

    // Clean up any leftover port file from previous runs
    if Path.exists(portFilePath) =>
        TextFile.delete(portFilePath)

    // Start a simple Python server that binds to port 0 (OS assigns free port),
    // calls listen(), THEN writes the port to a file (to avoid race condition)
    var pythonCode: str = $"import socket;s=socket.socket();s.setsockopt(socket.SOL_SOCKET,socket.SO_REUSEADDR,1);s.bind(('127.0.0.1',0));port=s.getsockname()[1];s.listen(5);f=open('{portFilePath}','w');f.write(str(port));f.flush();f.close();c1,a1=s.accept();r1=c1.recv(1024);c1.send(b'HTTP/1.0 200 OK\\r\\n\\r\\n/page1');c1.close();c2,a2=s.accept();r2=c2.recv(1024);c2.send(b'HTTP/1.0 200 OK\\r\\n\\r\\n/page2');c2.close();c3,a3=s.accept();r3=c3.recv(1024);c3.send(b'HTTP/1.0 200 OK\\r\\n\\r\\n/page3');c3.close();s.close()"
    var server: Process = &Process.run("python", {"-c", pythonCode})

    // Wait for server to be ready and get the port
    var attempts: int = 0
    while attempts < 100 =>
        if Path.exists(portFilePath) =>
            attempts = 200
        else =>
            Time.sleep(50)
            attempts = attempts + 1

    if attempts < 200 =>
        print("Server not ready\n")
        return

    // Read the port from the file
    var portStr: str = TextFile.readAll(portFilePath).trim()
    var addr: str = $"127.0.0.1:{portStr}"

    print("Server ready\n")

    // Make 3 parallel HTTP GET requests to different paths
    var resp1: str = &httpGet(addr, "/page1")
    var resp2: str = &httpGet(addr, "/page2")
    var resp3: str = &httpGet(addr, "/page3")

    // Sync all requests
    resp1!
    resp2!
    resp3!
    print("All HTTP requests completed in parallel\n")

    // Verify responses contain expected paths
    var count: int = 0
    if resp1.contains("/page") =>
        count = count + 1
    if resp2.contains("/page") =>
        count = count + 1
    if resp3.contains("/page") =>
        count = count + 1

    print($"Valid responses: {count}\n")

    if count == 3 =>
        print("SUCCESS: All parallel HTTP requests returned valid responses\n")
    else =>
        print("FAILURE: Some HTTP requests failed\n")

    server!

    // Cleanup
    if Path.exists(portFilePath) =>
        TextFile.delete(portFilePath)
    print("Test complete\n")
