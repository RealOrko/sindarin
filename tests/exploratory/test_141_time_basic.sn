// Test Time static methods and basic usage

fn main(): int =>
    // Test Time.now()
    print("Testing Time.now()...\n")
    var now: Time = Time.now()
    print("Created Time from now()\n")

    // Verify now creates a valid Time value
    var ms: int = now.millis()
    print($"  millis() = {ms}\n")
    print($"  Valid (ms > 0): {ms > 0}\n")

    // Test Time.utc()
    print("Testing Time.utc()...\n")
    var utc: Time = Time.utc()
    print("Created Time from utc()\n")

    // Verify utc creates a valid Time value
    var utcMs: int = utc.millis()
    print($"  millis() = {utcMs}\n")
    print($"  Valid (ms > 0): {utcMs > 0}\n")

    // Test Time.fromMillis() - epoch-based Time creation
    print("\nTesting Time.fromMillis(1735500000000)...\n")
    var t1: Time = Time.fromMillis(1735500000000)
    print("Created Time from milliseconds\n")
    var t1Sec: int = t1.seconds()
    print($"  seconds() = {t1Sec}\n")
    print($"  Correct (seconds == 1735500000): {t1Sec == 1735500000}\n")

    // Test Time.fromSeconds() - epoch-based Time creation
    print("\nTesting Time.fromSeconds(1735500000)...\n")
    var t2: Time = Time.fromSeconds(1735500000)
    print("Created Time from seconds\n")
    var t2Ms: int = t2.millis()
    print($"  millis() = {t2Ms}\n")
    print($"  Correct (millis == 1735500000000): {t2Ms == 1735500000000}\n")

    // Test Time.sleep() - timing verification
    print("\nTesting Time.sleep()...\n")
    var start: Time = Time.now()
    Time.sleep(100)
    var end: Time = Time.now()
    var elapsed: int = end.diff(start)
    print($"  Slept for {elapsed}ms (expected ~100ms)\n")
    // Note: Don't fail if timing varies - Â±10-20ms is normal
    print($"  Reasonable timing (80-150ms): {elapsed >= 80 and elapsed <= 150}\n")

    // All static methods work correctly
    print("\nAll Time static methods work correctly\n")
    print("PASS\n")

    return 0
